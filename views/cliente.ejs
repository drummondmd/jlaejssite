<%- include('partials/header.ejs') %>

    <style>
        #perfil {
            border-radius: 50%;
        }
    </style>

    <div class="container-lg my-lg-5 bg-secondary-subtle rounded d-flex align-items-stretch">
        <div class="row">
            <div class="col-lg-4 d-flex align-items-center">
                <div class="row">

                    <div class="col-lg-12 d-flex justify-content-center">
                        <% if(locals.user){%>
                            <% if(user.foto){ %>
                                <img id="perfil" src="<%=user.foto%>" alt="" width="200px">
                                <% }else{ %>
                                    <img id="perfil"
                                        src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSzIdr7HcfjPdwSAGPtaGRxlaM7d-PaAJdX9Q&s"
                                        alt="" width="200px">
                                    <% } %>
                                        <% } %>
                    </div>
                    <div class="col-lg-12 text-center">
                        <% if(locals.user){%>
                            <h3 class="h3">Seja bem Vindo,</h3>
                            <h3 class="h2">
                                <%= user.nome %>
                                    <%= user.sobrenome %>
                            </h3>
                            <h3 class="h3">a sua area exclusiva.</h3>
                    </div>
                    <% } %>

                </div>

            </div>
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-12">
                        <h1 class="display-6">Projetos atuais</h1>
                        <div class="row">
                            <% if(locals.atuais){%>
                                <% if(atuais.length==0){ %>
                                    <p>
                                        Voce ainda não tem projetos
                                    </p>
                                    <% }else{ %>

                                        <% atuais.forEach(element=>{ %>

                                            <div class="card z-1 m-2" style="width: 18rem;">
                                                <a href="/detalhes-de-projeto/<%=element.project_id%>">
                                                    <div class="card-body">
                                                        <h5 class="card-title">
                                                            <%= element.nome %>
                                                        </h5>
                                                        <p class="card-text mb-2 text-body-secondary">
                                                            <%= element.finalidade %>
                                                        </p>
                                                        <p class="card-subtitle">
                                                            <%= element.endereco %>
                                                        </p>
                                                    </div>
                                                </a>
                                            </div>



                                            <%}) %>
                                            <% } %>
                                            <% } %>
                        </div>


                    </div>



                <div class="col-12">
                    <h1 class="display-6">Projetos finalizados</h1>
                    <div class="row">
                        <% if(locals.finalizados){%>
                            <% if(finalizados.length==0){ %>
                                <p>Voce ainda não tem projetos</p>
                                <% }else{ %>
                                    <% finalizados.forEach(element=>{ %>
                                        <div class="card m-2" style="width: 18rem;">
                                            <a href="/detalhes-de-projeto/<%=element.project_id%>">
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <%= element.nome %>
                                                    </h5>
                                                    <p class="card-text mb-2 text-body-secondary">
                                                        <%= element.finalidade %>
                                                    </p>
                                                    <p class="card-subtitle">
                                                        <%= element.endereco %>
                                                    </p>
                                                </div>
                                            </a>
                                        </div>
                                       <%})} %>
                        <% } %>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>





    <%- include('partials/footer.ejs') %>