<%- include('partials/header.ejs') %>

<div class="container m-5">
    <h1>Register</h1>

<div class="row">
  <div class="col-sm-8">
    <div class="card">
      <div class="card-body">

        <!-- Makes POST request to /register route -->
        <form action="/register" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" name="nome">
          </div>
          <div class="form-group">
            <label for="sobrenome">Sobrenome</label>
            <input type="text" class="form-control" name="sobrenome">
          </div>
          <div class="form-group my-3">
            <label for="dn">Data de Nascimento: </label>
            <input type="date" name="dn">
          </div>
          <div class="form-group my-3">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="feminino" value="feminino" name="sexo">
                <label class="form-check-label" for="feminino">Feminino</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="inlineCheckbox2" value="masculino" name="sexo">
                <label class="form-check-label" for="masculino">Masculino</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="inlineCheckbox3" value="option3" disabled name="sexo" >
                <label class="form-check-label" for="nÃ£obi">3 (disabled)</label>
              </div>
          </div>
          <div class="form-group m-1">
            <label for="password">Crie Sua Senha:</label>
            <input type="password" class="form-control" name="password">
          </div>
          <div class="form-group mt-3"></div>
          <button type="submit" class="btn btn-outline-dark">Register</button>
        </form>

      </div>
    </div>
  </div>

  <div class="col-sm-4">
    <div class="card social-block">
      <div class="card-body">
        <a class="btn btn-block" href="/auth/google" role="button">
          <i class="fab fa-google"></i>
          Sign Up with Google
        </a>
      </div>
    </div>
  </div>

</div>
</div>

</div>




